package rules

import com.kaleshrikant.model.PaymentOffer;

rule "Offer for PayTm"
    when
       // offerObject : PaymentOffer(channel == "PayTm")
        offerObject : PaymentOffer()
        eval(offerObject.getChannel().equals("PayTm"))
    then
        offerObject.setDiscount(17);
        System.out.println("Offer only for PayTm");
    end

