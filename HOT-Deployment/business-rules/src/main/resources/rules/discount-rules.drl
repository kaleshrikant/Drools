package rules;

import com.kaleshrikant.drools.model.Customer;
import com.kaleshrikant.drools.model.Order;

rule "Welcome Discount - New Customers"
when
    $customer: Customer(level == "NEW")
    $order: Order(amount > 100)
then
    $order.addDiscount(0.05, "Welcome Discount");
    System.out.println("v1.0.0: Applied 5% welcome discount for new customer");
end

rule "Silver Customer Discount"
when
    $customer: Customer(level == "SILVER")
    $order: Order(amount > 500)
then
    $order.addDiscount(0.10, "Silver Customer Discount");
    System.out.println("v1.0.0: Applied 10% discount for Silver customer");
end

rule "Gold Customer Discount"
when
    $customer: Customer(level == "GOLD")
    $order: Order(amount > 1000)
then
    $order.addDiscount(0.15, "Gold Customer Discount");
    System.out.println("v1.0.0: Applied 15% discount for Gold customer");
end

rule "High Value Order Bonus"
when
    $order: Order(amount > 2000)
then
    $order.addDiscount(0.05, "High Value Bonus");
    System.out.println("v1.0.0: Applied 5% high value bonus");
end

rule "Default No Discount"
when
    $order: Order(discount == 0.0)
then
    // This rule ensures every order gets at least a message
    System.out.println("v1.0.0: No discount rules applied for this order");
end