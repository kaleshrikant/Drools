<kmodule xmlns="http://www.drools.org/xsd/kmodule">
    <!-- Existing rule base -->
    <kbase name="rules" packages="rules">
        <ksession name="ksession-rules"/>
    </kbase>

    <!-- NEW: Only for true CEP programs -->
    <kbase name="cep-rules" packages="rules" eventProcessingMode="stream">
        <ksession name="ksession-cep" type="stateful" clockType="pseudo"/>
    </kbase>

    <kbase name="event-temporal-kbase" packages="rules">
        <ksession name="event-temporal-ksession"/>
    </kbase>

    <!-- NEW: Only for true DECISION-TABLES programs -->
    <kbase name="decisionTableKBase" packages="rules" eventProcessingMode="stream">
        <ksession name="decisionTable-session"/>
    </kbase>

    <!-- NEW: Only for Global Logging programs -->
    <kbase name="globalLoggingKBase" packages="rules.global" eventProcessingMode="stream">
        <ksession name="global-logging-session"/>
    </kbase>

    <kbase name="advancedKBase" packages="rules.advanced" eventProcessingMode="stream">
        <ksession name="double-age-session"/>
    </kbase>

    <!-- NEW: Only for true Query programs -->
    <kbase name="rulesquery" packages="rules">
        <ksession name="ksession-query"/>
    </kbase>

    <!-- NEW: Only for true DSL programs -->
    <kbase name="dslKBase" packages="rules">
        <ksession name="dslSession"/>
    </kbase>

    <!-- NEW: Only for true advanced package programs -->
    <kbase name="advancedBase" packages="com.kaleshrikant.drools.advanced">
        <ksession name="advancedSession" type="stateful"/>
    </kbase>
</kmodule>
