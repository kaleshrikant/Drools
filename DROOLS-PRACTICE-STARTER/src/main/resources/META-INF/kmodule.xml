<kmodule xmlns="http://www.drools.org/xsd/kmodule">
    <!-- Existing rule base -->
    <kbase name="rules" packages="rules">
        <ksession name="ksession-rules"/>
    </kbase>

    <!-- NEW: Only for true CEP programs -->
    <kbase name="cep-rules" packages="rules" eventProcessingMode="stream">
        <ksession name="ksession-cep" type="stateful" clockType="pseudo"/>
    </kbase>

    <kbase name="event-temporal-kbase" packages="rules">
        <ksession name="event-temporal-ksession"/>
    </kbase>

    <!-- NEW: Only for true DECISION-TABLES programs -->
    <kbase name="decisionTableKBase" packages="rules" eventProcessingMode="stream">
        <ksession name="decisionTable-session"/>
    </kbase>

</kmodule>
