package com.kaleshrikant.drools.session;

import com.kaleshrikant.drools.sessions.model.Client;

global java.util.List logCollector;

rule "Adult Client"
    when
        $c : Client(age >= 30 && age < 60)
    then
        $c.setCategory("Adult");
        logCollector.add("ðŸ§‘ Adult category assigned to " + $c.getName());
        update($c);
end

rule "Young Adult Client"
    when
        $c : Client(age >= 18 && age < 30)
    then
        $c.setCategory("Young Adult");
        logCollector.add("ðŸ§’ Young Adult category assigned to " + $c.getName());
        update($c);
end

rule "Senior Client"
    when
        $c : Client(age >= 60)
    then
        $c.setCategory("Senior");
        logCollector.add("ðŸ‘µ Senior category assigned to " + $c.getName());
        update($c);
end
