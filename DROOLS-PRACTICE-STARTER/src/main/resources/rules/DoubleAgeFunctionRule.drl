package rules.advanced;

import com.kaleshrikant.drools.advanced.model.UserProfile;

// ðŸ”¹ Function to double the age
function int doubleAge(int age) {
    return age * 2;
}

rule "Double Age of UserProfile"
    when
        $u : UserProfile()
    then
        int newAge = doubleAge($u.getAge());
        $u.setAge(newAge);
        System.out.println("ðŸ”¹ Age doubled for " + $u.getName() + " â†’ " + newAge);
end
